@model Patient


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Patient</h2>
    </div>

      <form method="post" asp-action="DeleteEmp">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

         <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" disabled>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PassportNumber">Designation</label>
                <input type="text" class="form-control mb-3" asp-for="PassportNumber" disabled>
                <span asp-validation-for="PassportNumber" class=" alert-danger"></span>
            </div>
        </div>

         <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Emirates_ID">Emirates_ID</label>
                <input type="text" class="form-control mb-3" asp-for="Emirates_ID" disabled>
                <span asp-validation-for="Emirates_ID" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Emirate">Emirate</label>
                <input type="text" class="form-control" asp-for="Emirate" disabled>
                <span asp-validation-for="Emirate" class=" alert-danger"></span>
            </div>
        </div>

          <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Address">Address</label>
                <input type="text" class="form-control mb-3" asp-for="Address" disabled>
                <span asp-validation-for="Address" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="FirstDose">FirstDose</label>
                <input type="text" class="form-control" asp-for="FirstDose" disabled>
                <span asp-validation-for="FirstDose" class=" alert-danger"></span>
            </div>
        </div>

           <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="SecondDose">SecondDose</label>
                <input type="text" class="form-control mb-3" asp-for="SecondDose" disabled>
                <span asp-validation-for="SecondDose" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="ThirdDose">ThirdDose</label>
                <input type="text" class="form-control" asp-for="ThirdDose" disabled>
                <span asp-validation-for="ThirdDose" class=" alert-danger"></span>
            </div>
        </div>

             <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ForthDose">ForthDose</label>
                <input type="text" class="form-control mb-3" asp-for="ForthDose" disabled>
                <span asp-validation-for="ForthDose" class=" alert-danger"></span>
            </div>
             <div class="form-group col-md-6 mb-3">
                <label asp-for="RecordCreatedOn">Created On</label>
                <input type="datetime-local" class="form-control" asp-for="RecordCreatedOn" disabled>
                <span asp-validation-for="RecordCreatedOn" class=" alert-danger"></span>
            </div>
        </div>
          <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Patient" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
