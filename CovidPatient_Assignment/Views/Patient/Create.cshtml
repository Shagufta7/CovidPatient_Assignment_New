     </div>

      <div class="form-group col-md-6">
     RecordCreatedOn:
     @Html.TextAreaFor(expression:model => model.RecordCreatedOn,htmlAttributes:new{@class = "form-control"})
      @Html.ValidationMessageFor(expression:model => model.RecordCreatedOn,null, htmlAttributes:new {@class=" text-danger"})
     
     </div>

     <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Submit</button>
    <a asp-controller="Patient" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>


}

