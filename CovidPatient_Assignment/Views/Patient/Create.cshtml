      @Html.ValidationMessageFor(expression:model => model.FirstDose,null, htmlAttributes:new {@class=" text-danger"})
     
     </div>

      <div class="form-group col-md-6">
     SecondDose:
     @Html.TextAreaFor(expression:model => model.SecondDose,htmlAttributes:new{@class = "form-control"})
      @Html.ValidationMessageFor(expression:model => model.SecondDose,null, htmlAttributes:new {@class=" text-danger"})
     
     </div>

       <div class="form-group col-md-6">
     ThirdDose:
     @Html.TextAreaFor(expression:model => model.ThirdDose,htmlAttributes:new{@class = "form-control"})
